<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :assigned_date %>
    <%= f.date_select :assigned_date %>
  </div>

  <div class="field">
    <%= f.label :completion_date %>
    <%= f.date_select :completion_date %>
  </div>

  <div class="field">
    <%= f.label :submission_date %>
    <%= f.date_select :submission_date %>
  </div>

  <div class="field">
    <%= f.label :lead %>
    <%= f.collection_select :reporter_id, User.with_role(:lead), :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
